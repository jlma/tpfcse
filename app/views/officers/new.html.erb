<h1>New officer</h1>

<%= error_messages_for :officer %>

<% form_for(@officer) do |f| %>
  <p>
    <b>Office</b><br />
    <%= f.text_field :office_name %>
  </p>

  <p>
    <b>Officer</b><br />
    <%= f.text_field :officer_name %>
  </p>

  <p>
    <b>Club</b><br />
      <%= f.collection_select :club_ids, Club.find(:all, :order => 'state'), :id, :club_name, {}, :multiple => false %>
  </p>

  <p>
    <b>Current</b><br />
    <%= f.check_box :current %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', officers_path %>
